{
  "name": "akar",
  "version": "1.0.0-beta",
  "description": "Akar.js is a simple and lightweight schema based data-validation library.",
  "type": "module",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist",
    "docs:dev": "cd docs && npm run docs:dev",
    "docs:build": "cd docs && npm run docs:build",
    "docs:preview": "cd docs && npm run docs:preview"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.x"
  },
  "engineStrict": true,
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@vitest/coverage-v8": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "badgen": "^3.2.3",
    "covgen": "^3.2.1",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "release-it": "^17.8.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.8.1",
    "vitepress": "^1.4.1",
    "vitest": "^2.1.2"
  },
  "homepage": "https://mahabubx7.github.io/akarjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mahabubx7/akarjs.git"
  },
  "bugs": "https://github.com/mahabubx7/akarjs/issues",
  "license": "MIT",
  "author": "Mahabub <mahabubx7@gmail.com>",
  "keywords": [
    "akar",
    "akarjs",
    "validation",
    "typescript"
  ],
  "contributors": [
    "Mahabub <mahabubx7@gmail.com>, akar.js"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore(release): v${version}",
      "requireUpstream": true,
      "requireCleanWorkingDir": true,
      "tagAnotation": "v${version}",
      "push": true
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "tsup": {
    "dts": true,
    "target": "es2018",
    "format": [
      "esm",
      "cjs"
    ],
    "splitting": false,
    "sourceMap": true,
    "minify": false,
    "legacyOutput": true,
    "clean": true,
    "keepNames": true,
    "outDir": "dist",
    "entry": [
      "lib/index.ts",
      "lib/schemas/*",
      "lib/validators/*",
      "lib/helpers/*",
      "index.ts"
    ]
  },
  "lint-staged": {
    "*.(ts,js)": [
      "eslint --fix",
      "prettier --write",
      "vitest related --run"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
